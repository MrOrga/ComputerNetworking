<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="250.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="challengeController">
    <children>
        <AnchorPane layoutX="25.0" layoutY="15.0" prefHeight="220.0" prefWidth="300.0" styleClass="form"
                    stylesheets="@css.css">
            <children>
                <Text fill="WHITE" layoutX="25.0" layoutY="50.0" strokeType="OUTSIDE" strokeWidth="0.0"
                      text="Challenge from:" wrappingWidth="116.53673553466797">
                    <font>
                        <Font name="Calibri" size="18.0"/>
                    </font>
                </Text>
                <Text fx:id="friendUser" fill="WHITE" layoutX="150.0" layoutY="50.0" strokeType="OUTSIDE"
                      strokeWidth="0.0" text="test" wrappingWidth="87.35687279701233">
                    <font>
                        <Font name="Calibri Bold" size="18.0"/>
                    </font>
                </Text>
                <HBox layoutX="45.0" layoutY="139.0" prefHeight="48.0" prefWidth="205.0" spacing="30.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#acceptChallengeClick"
                                style="-fx-background-color: #1cb730;" text="Accept" textFill="#1cb730">
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                        </Button>
                        <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#declineChallangeClick"
                                text="Decline">
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                        </Button>
                    </children>
                </HBox>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
