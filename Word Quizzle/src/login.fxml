<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ControllerLogin">
    <children>
        <AnchorPane layoutX="50.0" layoutY="170.0" prefHeight="250.0" prefWidth="300.0" styleClass="form" stylesheets="@css.css">
            <children>
                <VBox layoutX="42.0" layoutY="22.0" prefHeight="205.0" prefWidth="225.0" spacing="25.0">
                    <children>
                        <TextField fx:id="username" focusTraversable="false" prefHeight="25.0" prefWidth="220.0" promptText="username" styleClass="textfield">
                            <font>
                                <Font name="Calibri" size="12.0" />
                            </font>
                        </TextField>
                        <PasswordField fx:id="passwd" focusTraversable="false" prefHeight="25.0" prefWidth="220.0" promptText="password" styleClass="textfield">
                     <font>
                        <Font name="Calibri" size="12.0" />
                     </font></PasswordField>
                        <Button mnemonicParsing="false" onAction="#loginClick" prefHeight="50.0" prefWidth="120.0" stylesheets="@css.css" text="Login">
                            <VBox.margin>
                                <Insets left="30.0" />
                            </VBox.margin>
                        </Button>
                        <HBox prefHeight="100.0" prefWidth="200.0">
                            <children>
                                <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Prima volta su Word Quiz? " />
                                <Text fx:id="register" fill="WHITE" onMouseClicked="#backToRegister" strokeType="OUTSIDE" strokeWidth="0.0" text="Registrati" underline="true">
                                    <cursor>
                                        <Cursor fx:constant="HAND" />
                                    </cursor>
                                </Text>
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
