                     <VBox.margin>
                        <Insets left="10.0" />
                     </VBox.margin>
                     <children>
                              <Button minWidth="125.0" mnemonicParsing="false" onAction="#showFriendListClick" prefHeight="40.0" prefWidth="125.0" text="Friend list">
