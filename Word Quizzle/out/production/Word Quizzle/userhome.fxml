                </ImageView>
            </children>
        </AnchorPane>
    </top>
    <bottom>
        <AnchorPane BorderPane.alignment="CENTER">
            <children>
                <Button layoutX="280.0" layoutY="-4.0" mnemonicParsing="false" onAction="#challengeClick" prefHeight="44.0" prefWidth="200.0" styleClass="black" text="Challenge">
