<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ControllerRegister">
    <children>
        <AnchorPane layoutX="50.0" layoutY="170.0" prefHeight="250.0" prefWidth="300.0" styleClass="form" stylesheets="@css.css">
            <children>
                <VBox layoutX="30.0" layoutY="26.0" prefHeight="199.0" prefWidth="240.0" spacing="25.0">
                    <children>
                        <TextField fx:id="username" focusTraversable="false" prefHeight="25.0" prefWidth="220.0" promptText="username" style="-fx-background-color: #333;" styleClass="textfield" stylesheets="@css.css">
                     <font>
                        <Font name="Calibri" size="12.0" />
                     </font></TextField>
                        <PasswordField fx:id="passwd" focusTraversable="false" prefHeight="25.0" prefWidth="214.0" promptText="password" style="-fx-background-color: #333;" styleClass="textfield">
                     <font>
                        <Font name="Calibri" size="12.0" />
                     </font></PasswordField>
                        <Button defaultButton="true" mnemonicParsing="false" onAction="#registerClick" prefHeight="50.0" prefWidth="100.0" stylesheets="@css.css" text="Register">
                            <VBox.margin>
                                <Insets left="60.0" />
                            </VBox.margin>
                        </Button>
                        <HBox spacing="5.0">
                            <children>
                                <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Sei giÃ  registrato?" />
                                <Text fill="WHITE" onMouseClicked="#goToLogin" strokeType="OUTSIDE" strokeWidth="0.0" text="Effettua l' accesso" underline="true">
                                    <cursor>
                                        <Cursor fx:constant="HAND" />
                                    </cursor>
                                </Text>
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
